
@{
    ViewBag.Title = "EmpleadoSave";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>EmpleadoSave</h2>

<h3>@ViewBag.id</h3>

@using (Html.BeginForm("Save", "Empleado", FormMethod.Post))
{
    <label>ID</label>
    <br />
    <input type="text" name="id" value="@ViewBag.id" />
    <br />

    <label for="nombre"> Nombre de empleado </label>
    <br>
    <input type="text" name="nombre" value="@ViewBag.nombre" required>
    <br>

    <label for="apellido">Apellido de empleado</label>
    <br>
    <input type="text" name="apellido" value="@ViewBag.apellido" required>
    <br>

    <label for="dui">DUI</label>
    <br>
    <input type="number" name="dui" value="@ViewBag.dui" required>
    <br>

    <label for="direccion"> Direccion de empleado </label>
    <br>
    <input type="text" name="direccion" value="@ViewBag.direccion" required>
    <br>

    <label for="telefono">Telefono</label>
    <br>
    <input type="tel" name="telefono" value="@ViewBag.telefono" required>
    <br>

    <label for="correo">Correo</label>
    <br>
    <input type="email" name="correo" value="@ViewBag.correo" required>
    <br>

    <label for="cargo"> Cargo de empleado </label>
    <br>
    <input type="text" name="cargo" value="@ViewBag.cargo" required>
    <br>
    <br />
    <input type="submit" class="btn btn-success" />



}